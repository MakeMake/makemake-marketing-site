mixin feature(item, color)
  div
    .illustration.mb-4.rounded-lg.p-8.h-40(class= "bg-" + color + "-100")
    .text-xl.font-medium.mb-2.text-black!= item.title 
    .text-base.text-gray-600.font-light= item.description

mixin tile(item)
  - item.illustration = item.illustration || "./images/Icon.svg"
  a.flex.flex-col.justify-between.rounded-lg.p-8.shadow-xl.transform.transition.duration-300.ease-in-out(class= "bg-" + item.color + "-500 hover:scale-105 hover:shadow-2xl", href="#" + item.path)
    div
      img.mb-4.h-12(src=item.illustration)
      .text-xl.font-medium.mb-2(class= "text-" + item.color + "-" + item.colorPrimary)!= item.title 
      .text-sm.font-light(class= "text-" + item.color + "-" + item.colorSecondary)!= item.description
    i.mt-2(data-feather="arrow-down", class= "text-" + item.color + "-" + item.colorPrimary)
