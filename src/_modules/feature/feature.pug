mixin feature(item, color)
  div
    .illustration.mb-4.rounded-lg.p-8.h-40(class= "bg-" + color + "-100")
    .text-xl.font-medium.mb-2.text-black!= item.title 
    .text-base.text-gray-600.font-light= item.description

mixin tile(item, color, illustration)
  a.rounded-lg.p-8.shadow-xl.transform.transition.duration-300.ease-in-out(class= "bg-" + color + "-500 hover:scale-105 hover:shadow-2xl", href="#" + item.path)
    img.mb-4.h-20(src=illustration)
    .text-xl.font-medium.mb-2(class= "text-" + color + "-100")!= item.title 
    .text-sm.font-light(class= "text-" + color + "-900")!= item.description
    i.mt-2(data-feather="arrow-right", class= "text-" + color + "-700")
