extends _layouts/base

include _modules/link/link
include _modules/section/section
include _modules/feature/feature
include _modules/heading/heading

block content
  .container.mx-auto.px-4
    include _modules/hero/hero
    +section
      +h2(site.data.global.features.title)(class="mb-12")
      div(class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-12")
        each item in site.data.global.features.list
          +featureDetail(item.title, item.description)
    +section
      +h2(site.data.global.featuresDetail.title)(class="mb-12")
      div(class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-12")
        each item in site.data.global.featuresDetail.list
          +featureDetail(item.title, item.description)
