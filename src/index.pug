extends _layouts/base

include _modules/link/link
include _modules/section/section
include _modules/feature/feature
include _modules/heading/heading

block content
  .container.mx-auto.px-4
    include _modules/hero/hero
    
    +section
    +h2WithDescription(site.data.global.features.title, site.data.global.features.description)
    div(class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-6 gap-6")
      each feature in site.data.global.features.list
        +tile(feature, "./images/Icon.svg")
    each feature in site.data.global.features.list
      +section(feature.path)
        +h2WithDescription(feature.title, feature.description)
        div(class="grid grid-cols-2 md:grid-cols-3 gap-6 xl:gap-12")
          each item in feature.list
            +feature(item, feature.color)
        
